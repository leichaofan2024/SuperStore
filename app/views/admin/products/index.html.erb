<div class="clearfix">
  <%= link_to("新建", new_admin_product_path, class: "btn btn-primary pull-right") %>
</div>
<div class="col-md-10">
<table class="table table-bordered">
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to(content_tag(:i, "", class: "fa fa-trash "), admin_product_path(product),
                                  method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-md")%>
            <%= link_to("编辑", edit_admin_product_path(product),class: "btn btn-success btn-sm")%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
