<div class="clearfix newbar">
  <%= link_to("新建", new_admin_product_path, class: "btn btn-primary pull-right") %>
</div>
<div class="col-md-11 col-xs-12">
<table class="table table-bordered">
  <thead>
    <th>#</th>
    <th width="250">商品详情</th>
    <th>名称</th>
    <th>单价</th>
    <th>数量</th>
    <th>上架时间</th>
    <th>管理</th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.created_at %></td>
        <td><%= link_to(content_tag(:i, "", class: "fa fa-trash "), admin_product_path(product),
                                  method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-md")%>
            <%= link_to("编辑", edit_admin_product_path(product),class: "btn btn-success btn-sm")%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
