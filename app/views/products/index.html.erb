<div class="row">

  <% @products.each do |product| %>
    <div class="col-md-3 col-xs-6 text-center" style="margin-bottom:20px">
      <%= link_to product_path(product) do %>

        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail product-picture")%>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail product-picture") %>
        <% end %>

      <% end %>
      <%= product.title %> Â¥ <%= product.price %>
    </div>
  <% end %>

</div>
