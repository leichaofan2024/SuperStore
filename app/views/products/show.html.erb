<div class="col-md-6 col-xs-12">
  <% if @product.image.present? %>
    <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
  <% else %>
    <%= image_tag("https://ww4.sinaimg.cn/large/006tNc79ly1fe2owhk361j307c05bmx4.jpg", class: "thumbnail") %>
  <% end %>
</div>
<div class="col-md-6 col-xs-12">
  <h3><%= @product.title %></h3>
  <p style="height:100px;"><%= simple_format(@product.description) %></p>
  <div class="pull-right">
    <% if @product.quantity.present? && @product.quantity > 0 %>
      <%= link_to("加入购物车",add_to_cart_product_path(@product),method: :post, class: "btn btn-danger btn-lg ") %>
    <% else %>
      已销售一空，无法购买
    <% end %>
  </div>
</div>
<div class="col-md-8">
  <h4>评论</h4>
  <hr>
  <table class="table table-striped table-bordered">
    <tbody>
      <% @product.reviews.each do |review| %>
        <tr>
          <td><%= review.user.email %> 说：</td>
        </tr>
        <tr>
          <td>
            <%= simple_format(review.content) %>
            <% if current_user.present? && review.user.email == current_user.email%>
             <%= link_to("撤销评论",product_review_path(@product,review), method: :delete, data:{confirm: "确定删除此评论吗？"}, class: "btn btn-warning", style: "float:right;")%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h4>我要评论:</h4>
  <hr>
  <%= simple_form_for @review,url:product_reviews_path(@product) do |f| %>
    <%= f.input :content %>
    <%= f.submit "提交评论"%>
  <% end %>
</div>
